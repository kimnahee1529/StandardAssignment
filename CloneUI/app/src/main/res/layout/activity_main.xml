                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/house_pic1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:text="@string/first_house_price"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            tools:layout_editor_absoluteX="36dp"
                                            tools:layout_editor_absoluteY="180dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:text="@string/one_room"
                                            android:textColor="#6E6E6E"
                                            tools:layout_editor_absoluteX="36dp"
                                            tools:layout_editor_absoluteY="180dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:text="@string/first_house_structure"
                                            android:textColor="#9A9A9A"
                                            tools:layout_editor_absoluteX="5dp"
                                            tools:layout_editor_absoluteY="152dp" />
                                </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/second_house"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/house_pic2"
                                    android:layout_width="160dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/house_pic2"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:id="@+id/empty_heart2"
                                    android:layout_width="16dp"
                                    android:layout_height="18dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="24dp"
                                    android:src="@drawable/empty_heart"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/house_pic2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:text="@string/second_house_price"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            tools:layout_editor_absoluteX="36dp"
                                            tools:layout_editor_absoluteY="180dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:text="@string/apartment"
                                            android:textColor="#6E6E6E"
                                            tools:layout_editor_absoluteX="36dp"
                                            tools:layout_editor_absoluteY="180dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:text="@string/second_house_structure"
                                            android:textColor="#9A9A9A"
                                            tools:layout_editor_absoluteX="5dp"
                                            tools:layout_editor_absoluteY="152dp" />
                                </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/third_house"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/house_pic3"
                                    android:layout_width="160dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/house_pic3"
                                    android:layout_marginTop="3dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:id="@+id/empty_heart3"
                                    android:layout_width="16dp"
                                    android:layout_height="18dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="24dp"
                                    android:src="@drawable/empty_heart"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
